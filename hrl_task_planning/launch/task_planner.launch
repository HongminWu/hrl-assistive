<launch>
    <group ns="pddl_tasks">
        <group ns="pick_and_place">
            <param name="domain" textfile="$(find hrl_task_planning)/params/pick_and_place.domain"/>
            <rosparam command="load" file="$(find hrl_task_planning)/params/pick_and_place.yaml"/>
        </group>

        <group ns="move_object">
            <param name="domain" textfile="$(find hrl_task_planning)/params/move_object.domain"/>
            <rosparam command="load" file="$(find hrl_task_planning)/params/move_object.yaml"/>
        </group>

        <group ns="shaving">
            <param name="domain" textfile="$(find hrl_task_planning)/params/shaving.domain"/>
            <rosparam command="load" file="$(find hrl_task_planning)/params/shaving.yaml"/>
        </group>
    </group>

    <node name="task_planner" pkg="hrl_task_planning" type="pddl_planner" output="screen" args="$(find hrl_task_planning)/src/ff"/>

    <node name="domain_state_aggregator" pkg="hrl_task_planning" type="domain_state_aggregator" output="screen" args="-d pick_and_place move_object shaving"/>

    <node name="task_smacher" pkg="hrl_task_planning" type="task_smacher" output="screen" />
</launch>
