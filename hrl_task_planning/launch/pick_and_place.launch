<launch>
    <node name='grasp_state_monitor' pkg="hrl_task_planning" type="grasping_monitor" output="screen" args="-d pick_and_place_right pick_and_place_left"/>

    <group ns="pddl_tasks">
        <group ns="pick_and_place_right">
            <param name="domain" textfile="$(find hrl_task_planning)/params/pick_and_place_right.domain"/>
            <rosparam command="load" file="$(find hrl_task_planning)/params/pick_and_place_right.yaml"/>
        </group>
    </group>
    <node name='known_loc_monitor_right' pkg="hrl_task_planning" type="known_location_monitor" output="screen" args="pick_and_place_right known -a pick_loc place_loc elsewhere"/>
    <node name='proximity_monitor_right' pkg="hrl_task_planning" type="proximity_monitor" output="screen" args="pick_and_place_right -o hand -f r_gripper_tool_frame -d 0.1"/>

    <group ns="pddl_tasks">
        <group ns="pick_and_place_left">
            <param name="domain" textfile="$(find hrl_task_planning)/params/pick_and_place_left.domain"/>
            <rosparam command="load" file="$(find hrl_task_planning)/params/pick_and_place_left.yaml"/>
        </group>
    </group>
    <node name='known_loc_monitor_left' pkg="hrl_task_planning" type="known_location_monitor" output="screen" args="pick_and_place_left known -a pick_loc place_loc elsewhere"/>
    <node name='proximity_monitor_left' pkg="hrl_task_planning" type="proximity_monitor" output="screen" args="pick_and_place_left -o hand -f l_gripper_tool_frame -d 0.1"/>
</launch>
